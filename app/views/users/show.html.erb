<main>
	<h1 class='center-align'>User</h1>
	<div class='container'>
<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Crypted password:</strong>
  <%= @user.crypted_password %>
</p>

<p>
  <strong>Salt:</strong>
  <%= @user.salt %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class: 'btn' %> 
</div>
</main>

<%= content_for :footer do %>
	<%= link_to 'Back', users_path, class: 'btn' %>
<% end %>